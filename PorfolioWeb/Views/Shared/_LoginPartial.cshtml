@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="navbar__item">
            <a class="navbar__link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="navbar__item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="navbar__link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="navbar__item">
            <a class="navbar__link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
@*    <li class="nav-item">
    <a class="navbar__link" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>*@
}

